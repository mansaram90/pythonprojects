def add(n1, n2):
    return n1 + n2

def subtract(n1, n2):
    return n1 - n2

def multiply(n1, n2):
    return n1 * n2

def divide(n1, n2):
    return n1/n2


operations = {"+": add,
              "-": subtract,
              "*": multiply,
              "/": divide
             }
def calculate():
    keep_going = True
    initial_number = float(input("enter the first number"))
    while keep_going:
        asked_operator = input("choose one, +, -, *, /")
        second_number = float(input("enter the second number"))
        # saved = operations[asked_operator](initial_number,second_number)

        intermediate_number = operations[asked_operator](initial_number,second_number)
        print(intermediate_number)

        choice = input(f"press y to use {intermediate_number} in the next calculation, press n to exit.").lower()

        if choice =="y":
            initial_number = intermediate_number
        else:
            keep_going = False
            print("\n"*20)
            calculate()


calculate()
